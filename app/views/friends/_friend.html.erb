<div id="<%= dom_id friend %>">
  
  <div class="p-3 mb-2 bg-light text-dark">
    <h1 class="display-4">
      <%= friend.first_name %>
      <%= friend.last_name %>
    </h1>
    <p class="lead">
      <%= friend.email %>   |  
      <%= friend.phone %>   |  
      <%= friend.instagram %>
    </p>
    <br/>
    <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 
    <%= link_to "Back", friends_path, class:"btn btn-secondary" %>
      <%= button_to "Destroy this friend", @friend, method: :delete %>

  </div>

</div>
